@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/Index.css">
    <title>Sala de escape</title>
  </head>
  <script>
    localStorage.removeItem('tiempo');
    localStorage.setItem('cantPistas', 0);
  </script>
  <body>
    <header>
      <div class="header-content">
        <div class="text-center">
          <h1 class="display-4">Welcome</h1>
          <p>To the dungeon</p>
        </div>
        <nav>
          <ul class="header-links">
            <li><a href='@Url.Action("Tutorial", "Home")'>Tutorial del juego</a></li>
            <li><a href='@Url.Action("Creditos", "Home")'>Créditos</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <form method="post" action='@Url.Action("Comenzar", "Home")'>
      <select name="tiemp">
        <option value="390">I'm Too Young To Die</option>
        <option selected value="300">Hurt Me Plenty</option>
        <option value="240">Ultra Violence</option>
        <option value="180">Nightmare</option>
        <option value="90">Ultra Nightmare</option>
      </select>
      <div class="container">
        <img src="/imgs/castle.jpg" class="center-image" alt="Castle Image">
        <input class="btn-play" type="submit" value="Jugar">
      </div>
    </form>
</body>
</html>